# Database
DB_HOST=postgres.prod.enterprise.com
DB_PORT=5432
DB_NAME=lip_reading_prod
DB_USER=lip_reader_prod
DB_PASSWORD=generate_secure_password_here

# RabbitMQ
RABBITMQ_HOST=rabbitmq.prod.enterprise.com
RABBITMQ_PORT=5672
RABBITMQ_USER=lip_reader
RABBITMQ_PASS=generate_secure_password_here
RABBITMQ_EXCHANGE=detection_events
RABBITMQ_QUEUE=detection_queue
RABBITMQ_ROUTING_KEY=detection

# Security
VAULT_ADDR=https://vault.enterprise.com:8200
VAULT_TOKEN=generate_vault_token_here
KMS_KEY_ID=arn:aws:kms:region:account-id:key/key-id
JWT_SECRET=generate_secure_jwt_secret_here

# Monitoring
SYSLOG_HOST=syslog.enterprise.com
SYSLOG_PORT=514
JAEGER_ENDPOINT=http://jaeger-collector.enterprise.com:14268/api/traces
PROMETHEUS_HOST=prometheus.enterprise.com

# Alerting
ALERT_WEBHOOK_URL=https://api.enterprise.com/alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX

# Cloud
AWS_REGION=us-east-1
AWS_VPC_ID=vpc-12345678
AWS_SUBNET_IDS=subnet-12345678,subnet-87654321
AWS_SECURITY_GROUP=sg-12345678

# Face recognition model
FACE_MODEL=cnn

# Dashboard
DASHBOARD_PORT=5000

# LipNet Service
LIPNET_URL=http://localhost:8000
